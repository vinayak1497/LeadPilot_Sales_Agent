/* Dashboard-specific styles for SalesShortcut UI Client */

/* Body Background */
body {
    background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
    min-height: 100vh;
    margin: 0;
    padding: 0;
    position: relative;
    overflow-x: hidden;
}

/* Particles - reuse from landing page */
.particles {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    pointer-events: none;
}

.particle {
    position: absolute;
    width: 4px;
    height: 4px;
    background: rgba(255, 255, 255, 0.5);
    border-radius: 50%;
    animation: float 15s infinite;
}

.particle:nth-child(1) { left: 10%; animation-delay: 0s; animation-duration: 12s; }
.particle:nth-child(2) { left: 25%; animation-delay: 2s; animation-duration: 18s; }
.particle:nth-child(3) { left: 40%; animation-delay: 4s; animation-duration: 14s; }
.particle:nth-child(4) { left: 55%; animation-delay: 1s; animation-duration: 16s; }
.particle:nth-child(5) { left: 70%; animation-delay: 3s; animation-duration: 20s; }
.particle:nth-child(6) { left: 85%; animation-delay: 5s; animation-duration: 15s; }
.particle:nth-child(7) { left: 15%; animation-delay: 2.5s; animation-duration: 17s; }
.particle:nth-child(8) { left: 60%; animation-delay: 4.5s; animation-duration: 13s; }

@keyframes float {
    0%, 100% {
        transform: translateY(100vh) scale(0);
        opacity: 0;
    }
    10% {
        opacity: 1;
    }
    90% {
        opacity: 1;
    }
    100% {
        transform: translateY(-100px) scale(1);
        opacity: 0;
    }
}

.dashboard-container {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    position: relative;
    z-index: 1;
}
  

/* Dashboard Header */
.dashboard-header {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 20px;
    margin: 1rem;
    padding: 1rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    position: sticky;
    top: 1rem;
    z-index: 100;
}

.header-left {
    display: flex;
    align-items: center;
    gap: 2rem;
}

.dashboard-header .logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0;
}

.dashboard-header .logo i {
    font-size: 1.75rem;
    color: var(--primary-color);
}

.dashboard-header .logo h1 {
    font-size: 1.5rem;
    font-weight: 700;
    color: white;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
}

.current-target {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.3);
    color: white;
    border-radius: 12px;
    font-weight: 600;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
}

.current-target i {
    font-size: 0.9rem;
}

.header-right {
    display: flex;
    align-items: center;
    gap: 1rem;
}

.reset-btn {
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
    color: white;
    border: 1px solid rgba(255, 255, 255, 0.3);
    padding: 0.75rem 1.5rem;
    border-radius: 12px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
}

.reset-btn:hover {
    background: rgba(255, 255, 255, 0.3);
    border-color: rgba(255, 255, 255, 0.5);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
}

.auth-btn {
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.9), rgba(37, 99, 235, 0.9));
    backdrop-filter: blur(10px);
    color: white;
    border: 1px solid rgba(255, 255, 255, 0.3);
    padding: 0.75rem 1.5rem;
    border-radius: 12px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    box-shadow: 0 4px 15px rgba(59, 130, 246, 0.3);
}

.auth-btn:hover {
    background: linear-gradient(135deg, rgba(37, 99, 235, 0.9), rgba(29, 78, 216, 0.9));
    border-color: rgba(255, 255, 255, 0.5);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(59, 130, 246, 0.4);
}

/* Stats Bar */
.stats-bar {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 20px;
    margin: 0 1rem 1rem 1rem;
    padding: 1.5rem 2rem;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
}

.stat-item {
    text-align: center;
    padding: 1rem;
    border-radius: 15px;
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.25);
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
}

.stat-item.hot {
    background: linear-gradient(135deg, rgba(245, 158, 11, 0.9), rgba(217, 119, 6, 0.9));
    backdrop-filter: blur(10px);
    color: white;
    border: 1px solid rgba(255, 255, 255, 0.4);
    box-shadow: 0 4px 20px rgba(245, 158, 11, 0.3);
}

.stat-item:hover {
    transform: translateY(-5px) scale(1.02);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
    background: rgba(255, 255, 255, 0.2);
}

.stat-value {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1;
    margin-bottom: 0.5rem;
    color: white;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
}

.stat-item.hot .stat-value {
    color: white;
}

.stat-label {
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.9);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.stat-item.hot .stat-label {
    color: rgba(255, 255, 255, 0.9);
}

/* Agent Columns */
.agent-columns {
    flex: 1;
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 1rem;
    margin: 0 1rem 1rem 1rem;
    padding: 0;
}

.agent-column {
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.25);
    border-radius: 20px;
    display: flex;
    flex-direction: column;
    min-height: 70vh;
    max-height: calc(100vh - 250px);
    overflow: hidden;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
}

.agent-column.calendar-column {
    background: linear-gradient(135deg, rgba(245, 158, 11, 0.15), rgba(251, 191, 36, 0.15));
    backdrop-filter: blur(10px);
    border: 1px solid rgba(245, 158, 11, 0.4);
}

.agent-column.ai-calling-column {
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.1), rgba(37, 99, 235, 0.1));
    backdrop-filter: blur(10px);
    border: 1px solid rgba(59, 130, 246, 0.3);
}

/* AI Calling Info */
.ai-calling-info {
    padding: 0.5rem 0;
}

.ai-calling-info .info-box {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 12px;
    padding: 1.5rem;
    text-align: center;
    margin-bottom: 1rem;
}

.ai-calling-info .info-box i {
    font-size: 3rem;
    color: rgba(59, 130, 246, 0.9);
    margin-bottom: 1rem;
    display: block;
}

.ai-calling-info .info-box h4 {
    color: white;
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
    font-weight: 600;
}

.ai-calling-info .info-box p {
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.9rem;
    margin: 0;
}

.unlock-criteria {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(5px);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 12px;
    padding: 1rem;
}

.unlock-criteria h5 {
    color: white;
    font-size: 0.95rem;
    margin-bottom: 0.75rem;
    font-weight: 600;
}

.unlock-criteria ul {
    list-style: none;
    padding: 0;
    margin: 0;
}

.unlock-criteria li {
    color: rgba(255, 255, 255, 0.85);
    font-size: 0.85rem;
    padding: 0.5rem 0;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.unlock-criteria li i {
    color: rgba(34, 197, 94, 0.8);
    font-size: 0.9rem;
}

/* AI Call Card */
.ai-call-card {
    background: rgba(59, 130, 246, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(59, 130, 246, 0.3);
    border-radius: 12px;
    padding: 1rem;
    margin-bottom: 0.75rem;
}

.ai-call-card .business-name {
    color: white;
    font-weight: 600;
    margin-bottom: 0.5rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.ai-call-card .call-status {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
}

.ai-call-card .call-status.ready {
    background: rgba(34, 197, 94, 0.2);
    color: rgba(34, 197, 94, 1);
    border: 1px solid rgba(34, 197, 94, 0.4);
}

.ai-call-card .call-status.in-progress {
    background: rgba(59, 130, 246, 0.2);
    color: rgba(59, 130, 246, 1);
    border: 1px solid rgba(59, 130, 246, 0.4);
    animation: pulse 2s infinite;
}

.ai-call-card .call-status.completed {
    background: rgba(156, 163, 175, 0.2);
    color: rgba(156, 163, 175, 1);
    border: 1px solid rgba(156, 163, 175, 0.4);
}

.ai-call-card .call-details {
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.8rem;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
}

.ai-call-card .call-actions {
    margin-top: 0.75rem;
    display: flex;
    gap: 0.5rem;
}

.btn-initiate-call {
    flex: 1;
    padding: 0.5rem 1rem;
    background: linear-gradient(135deg, #3b82f6, #2563eb);
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 0.85rem;
    font-weight: 600;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    transition: all 0.3s ease;
}

.btn-initiate-call:hover {
    background: linear-gradient(135deg, #2563eb, #1d4ed8);
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(59, 130, 246, 0.4);
}

.btn-initiate-call:disabled {
    background: rgba(156, 163, 175, 0.3);
    cursor: not-allowed;
    transform: none;
}

/* Column Headers */
.column-header {
    padding: 1.25rem 1.5rem;
    min-height: 90px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(5px);
    display: flex;
    align-items: center;
    gap: 1rem;
    position: sticky;
    top: 0;
    z-index: 10;
}

.calendar-column .column-header {
    background: rgba(245, 158, 11, 0.2);
    backdrop-filter: blur(10px);
    color: white;
    border: 1px solid rgba(245, 158, 11, 0.3);
    border-bottom-color: rgba(255, 255, 255, 0.2);
}

.agent-icon {
    width: 3rem;
    height: 3rem;
    min-width: 3rem;
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.3);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    flex-shrink: 0;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
}

.calendar-column .agent-icon {
    background: rgba(255, 255, 255, 0.2);
    color: white;
}

.agent-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.agent-info h3 {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 0.25rem;
    color: white;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
    line-height: 1.2;
}

.calendar-column .agent-info h3 {
    color: white;
}

.agent-info p {
    font-size: 0.8rem;
    color: rgba(255, 255, 255, 0.85);
    margin: 0;
    line-height: 1.3;
}

.calendar-column .agent-info p {
    color: rgba(255, 255, 255, 0.9);
}

.agent-status {
    flex-shrink: 0;
}

.agent-status .status-indicator {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: var(--gray-400);
}

.agent-status .status-indicator.active {
    background: var(--success-color);
    animation: pulse 2s infinite;
}

/* Column Content */
.column-content {
    flex: 1;
    padding: 1rem 1rem 1.5rem 1rem;
    overflow-y: auto;
    overflow-x: hidden;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    scrollbar-width: thin;
    scrollbar-color: rgba(255, 255, 255, 0.3) transparent;
}

.column-content::-webkit-scrollbar {
    width: 6px;
}

.column-content::-webkit-scrollbar-track {
    background: transparent;
}

.column-content::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.3);
    border-radius: 3px;
}

.column-content::-webkit-scrollbar-thumb:hover {
    background: rgba(255, 255, 255, 0.5);
}

/* Business Cards */
.business-card {
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.25);
    border-radius: 15px;
    padding: 1rem;
    transition: all 0.3s ease;
    animation: slideIn 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
}

.business-card:hover {
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    transform: translateY(-3px);
    background: rgba(255, 255, 255, 0.2);
}

.business-card.meeting-card {
    background: linear-gradient(135deg, rgba(255, 247, 237, 0.9), rgba(254, 243, 199, 0.9));
    backdrop-filter: blur(10px);
    border: 1px solid rgba(245, 158, 11, 0.4);
    box-shadow: 0 4px 20px rgba(245, 158, 11, 0.2);
}

/* Compact Business Cards */
.business-card.compact {
    padding: 0.875rem;
    border-radius: 12px;
}

.business-card.compact .business-header {
    margin-bottom: 0.5rem;
}

.business-card.compact .business-header h4 {
    font-size: 0.95rem;
    line-height: 1.2;
    margin-bottom: 0;
}

.business-card.compact .status-badge {
    padding: 0.2rem 0.6rem;
    font-size: 0.7rem;
}

.business-card.compact .business-details {
    margin-bottom: 0;
}

.business-card.compact .detail {
    margin-bottom: 0.3rem;
    font-size: 0.8rem;
}

.business-card.compact .detail i {
    width: 12px;
    font-size: 0.75rem;
}

/* Contact Row for Compact Cards */
.contact-row {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    margin-top: 0.3rem;
}

.contact-item {
    display: flex;
    align-items: center;
    gap: 0.3rem;
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.85);
    flex: 1;
    min-width: 0;
}

.contact-item i {
    width: 10px;
    color: rgba(255, 255, 255, 0.6);
    flex-shrink: 0;
    font-size: 0.7rem;
}

.contact-item span {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

/* Compact Notes */
.compact-notes {
    display: flex;
    align-items: flex-start;
    gap: 0.4rem;
    margin-top: 0.4rem;
    padding: 0.4rem;
    background: var(--gray-50);
    border-radius: 4px;
    font-size: 0.75rem;
    color: var(--gray-600);
    line-height: 1.3;
}

.compact-notes i {
    color: var(--primary-color);
    font-size: 0.7rem;
    margin-top: 0.1rem;
    flex-shrink: 0;
}

/* Hot Lead Styling */
.business-card.hot-lead {
    border-color: var(--accent-color);
    box-shadow: 0 2px 4px rgba(245, 158, 11, 0.1);
}

/* Notification result cards (calendar meeting requests) */
.notification_result {
    background: #fff3cd; /* light yellow */
    border: 1px solid #ffeeba;
    border-radius: var(--border-radius);
    padding: 1rem;
    margin-bottom: 0.75rem;
}
.notification_result .notification-header h4 {
    margin: 0 0 0.5rem 0;
    font-size: 1rem;
    color: #856404;
}
.notification_result .notification-body p {
    margin: 0.25rem 0;
    font-size: 0.85rem;
    color: #856404;
}

.business-title {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    flex: 1;
}

.hot-icon {
    color: var(--accent-color);
    font-size: 0.8rem;
    animation: pulse-fire 2s infinite;
}

.meeting-icon {
    color: var(--accent-color);
    font-size: 0.8rem;
}

@keyframes pulse-fire {
    0%, 100% {
        opacity: 1;
        transform: scale(1);
    }
    50% {
        opacity: 0.8;
        transform: scale(1.1);
    }
}

.business-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 0.75rem;
    gap: 0.5rem;
}

.business-header h4 {
    font-size: 1rem;
    font-weight: 600;
    color: white;
    line-height: 1.3;
    flex: 1;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
}

.status-badge {
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.025em;
    flex-shrink: 0;
}

.status-badge.status-found {
    background: var(--gray-100);
    color: var(--gray-700);
}

.status-badge.status-contacted {
    background: #dbeafe;
    color: #1d4ed8;
}

.status-badge.status-engaged {
    background: #d1fae5;
    color: #065f46;
}

.status-badge.status-not-interested {
    background: #fee2e2;
    color: #991b1b;
}

.status-badge.status-no-response {
    background: #fef3c7;
    color: #92400e;
}

.status-badge.status-converting {
    background: #fde68a;
    color: #92400e;
}

.status-badge.status-meeting {
    background: linear-gradient(135deg, var(--accent-color), #d97706);
    color: white;
    font-weight: 600;
}

.status-badge.status-pending {
    background: #ffc107;
    color: #000;
    font-weight: 600;
    animation: pulse 2s ease-in-out infinite;
}

.status-badge.status-confirmed {
    background: #28a745;
    color: white;
    font-weight: 600;
}

.business-card.pending-card {
    border-left: 4px solid #ffc107;
    background: #fffbeb;
}

@keyframes pulse {
    0%, 100% {
        opacity: 1;
    }
    50% {
        opacity: 0.7;
    }
}

.business-details {
    margin-bottom: 0.75rem;
}

.detail {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.9);
}

.detail i {
    width: 14px;
    color: rgba(255, 255, 255, 0.7);
    flex-shrink: 0;
}

.detail.meeting-detail {
    color: var(--accent-color);
    font-weight: 600;
}

.detail.meeting-detail i {
    color: var(--accent-color);
}

.description {
    font-size: 0.8rem;
    color: rgba(255, 255, 255, 0.85);
    line-height: 1.4;
    margin-top: 0.5rem;
    padding: 0.5rem;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(5px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 8px;
}

.notes {
    margin-top: 0.5rem;
}

.note {
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.85);
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(5px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    padding: 0.5rem;
    border-radius: 8px;
    margin-bottom: 0.25rem;
    border-left: 3px solid rgba(255, 255, 255, 0.5);
}

.business-footer {
    padding-top: 0.5rem;
    border-top: 1px solid var(--gray-100);
    color: var(--gray-500);
    font-size: 0.75rem;
}

/* Activity Log */
.activity-log {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 20px;
    margin: 0 1rem 1rem 1rem;
    max-height: 300px;
    transition: max-height 0.3s ease;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
}

.activity-log.collapsed {
    max-height: 60px;
}

.log-header {
