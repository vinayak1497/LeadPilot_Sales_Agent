.recommendation-box {
  background: var(--gray-50);
  padding: 1rem;
  border-radius: var(--border-radius);
}

.recommendation-box .priority {
  display: inline-block;
  padding: 0.25rem 0.75rem;
  border-radius: 20px;
  font-size: 0.8rem;
  font-weight: 600;
  margin-bottom: 0.5rem;
}

.recommendation-box .priority.high {
  background: #fef2f2;
  color: #dc2626;
}

.recommendation-box .priority.medium {
  background: #fffbeb;
  color: #d97706;
}

.recommendation-box .priority.low {
  background: #f0fdf4;
  color: #16a34a;
}

.recommendation-box .reason {
  margin: 0.5rem 0;
  color: var(--gray-700);
}

.recommendation-box .features {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
  margin-top: 0.75rem;
}

.feature-tag {
  background: var(--primary-color);
  color: white;
  padding: 0.2rem 0.6rem;
  border-radius: 4px;
  font-size: 0.75rem;
}

.research-error {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 2rem;
  text-align: center;
  color: #dc2626;
}

.research-error i {
  font-size: 3rem;
  margin-bottom: 1rem;
}

/* Toast Notifications */
.toast {
  position: fixed;
  bottom: 2rem;
  right: 2rem;
  padding: 1rem 1.5rem;
  border-radius: var(--border-radius);
  box-shadow: var(--shadow-lg);
  display: flex;
  align-items: center;
  gap: 0.75rem;
  font-weight: 500;
  z-index: 10000;
  transform: translateY(100px);
  opacity: 0;
  transition: all 0.3s ease;
}

.toast.show {
  transform: translateY(0);
  opacity: 1;
}

.toast-success {
  background: #22c55e;
  color: white;
}

.toast-error {
  background: #ef4444;
  color: white;
}

.toast i {
  font-size: 1.25rem;
}

/* Send to SDR button style */
#send-to-sdr-btn {
  background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
  border: none;
  font-weight: 600;
}

#send-to-sdr-btn:hover:not(:disabled) {
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
}

#send-to-sdr-btn:disabled {
  opacity: 0.7;
  cursor: not-allowed;
}

/* ===== Research Modal Styles ===== */
.research-dialog {
  max-width: 700px;
  max-height: 85vh;
}

.research-dialog .modal-content {
  max-height: 60vh;
  overflow-y: auto;
}

.research-loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 3rem;
  text-align: center;
}

.research-loading .spinner {
  width: 50px;
  height: 50px;
  border: 4px solid var(--gray-200);
  border-top-color: var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 1rem;
}

.research-loading p {
  color: var(--gray-600);
  font-size: 1rem;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.research-results {
  display: flex;
  flex-direction: column;
  gap: 1.25rem;
}

.research-results.hidden {
  display: none;
}

.business-info-header {
  background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
  color: white;
  padding: 1.25rem;
  border-radius: var(--border-radius);
  margin-bottom: 0.5rem;
}

.business-info-header h3 {
  margin: 0 0 0.5rem 0;
  font-size: 1.25rem;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.business-info-header .meta {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
  font-size: 0.85rem;
  opacity: 0.9;
}

.business-info-header .meta-item {
  display: flex;
  align-items: center;
  gap: 0.35rem;
}

.research-section {
  background: white;
  border: 1px solid var(--gray-200);
  border-radius: var(--border-radius);
  padding: 1rem;
}

.research-section h4 {
  margin: 0 0 0.75rem 0;
  font-size: 0.95rem;
  color: var(--gray-800);
  display: flex;
  align-items: center;
  gap: 0.5rem;
  border-bottom: 1px solid var(--gray-100);
  padding-bottom: 0.5rem;
}

.research-section h4 i {
  color: var(--primary-color);
  font-size: 0.9rem;
}

.research-section p {
  margin: 0;
  color: var(--gray-700);
  font-size: 0.9rem;
  line-height: 1.5;
}

.research-section ul {
  margin: 0;
  padding-left: 1.25rem;
}

.research-section li {
  color: var(--gray-700);
  font-size: 0.9rem;
  line-height: 1.6;
  margin-bottom: 0.35rem;
}

.research-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
  margin-top: 0.75rem;
}

.research-tags .tag {
  display: inline-block;
  padding: 0.25rem 0.75rem;
  border-radius: 20px;
  font-size: 0.8rem;
  font-weight: 500;
}

.research-tags .tag.industry {
  background: var(--primary-color);
  color: white;
}

.presence-analysis {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
  gap: 0.75rem;
}

.presence-item {
  background: var(--gray-50);
  padding: 0.75rem;
  border-radius: var(--border-radius);
  text-align: center;
}

.presence-item .label {
  font-size: 0.75rem;
  color: var(--gray-500);
  text-transform: uppercase;
  letter-spacing: 0.5px;
  margin-bottom: 0.25rem;
}

.presence-item .value {
  font-size: 0.9rem;
  font-weight: 600;
  color: var(--gray-800);
}

.presence-item .value.low { color: var(--danger-color); }
.presence-item .value.medium { color: var(--warning-color); }
.presence-item .value.high { color: var(--success-color); }

.research-section.pain-points h4 i {
  color: var(--danger-color);
}

.research-section.pain-points li::marker {
  color: var(--danger-color);
}

.research-section.benefits h4 i {
  color: var(--success-color);
}

.research-section.benefits li::marker {
  color: var(--success-color);
}

.recommendation-box {
  background: linear-gradient(135deg, #fef3c7, #fde68a);
  border: 1px solid #f59e0b;
  border-radius: var(--border-radius);
  padding: 1rem;
}

.recommendation-box .priority {
  display: inline-block;
  padding: 0.2rem 0.6rem;
  border-radius: 4px;
  font-size: 0.75rem;
  font-weight: 600;
  text-transform: uppercase;
  margin-bottom: 0.5rem;
}

.recommendation-box .priority.high {
  background: var(--danger-color);
  color: white;
}

.recommendation-box .priority.medium {
  background: var(--warning-color);
  color: white;
}

.recommendation-box .priority.low {
  background: var(--success-color);
  color: white;
}

.recommendation-box .reason {
  font-size: 0.9rem;
  color: var(--gray-800);
  margin-bottom: 0.75rem;
}

.recommendation-box .features {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
}

.recommendation-box .feature-tag {
  background: white;
  border: 1px solid #f59e0b;
  padding: 0.2rem 0.5rem;
  border-radius: 4px;
  font-size: 0.8rem;
  color: var(--gray-700);
}

.research-section.conversation li {
  background: var(--gray-50);
  padding: 0.75rem;
  border-radius: var(--border-radius);
  list-style: none;
  margin-left: -1.25rem;
  margin-bottom: 0.5rem;
  border-left: 3px solid var(--primary-color);
}

.research-error {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 3rem;
  text-align: center;
  color: var(--danger-color);
}

.research-error i {
  font-size: 3rem;
  margin-bottom: 1rem;
}

.research-error p {
  font-size: 1rem;
}

.research-error.hidden {
  display: none;
}

#proceed-to-sdr-btn {
  display: none;
}

#proceed-to-sdr-btn.visible {
  display: inline-flex;
}

/* Responsive for research modal */
@media (max-width: 768px) {
  .research-dialog {
    max-width: 95%;
    margin: 1rem;
  }
  
  .presence-analysis {
    grid-template-columns: 1fr;
  }
}

/* Proposal Section Styles */
.proposal-section {
  background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
  border: 2px solid var(--primary-color);
  border-radius: var(--border-radius-lg);
  padding: 1.5rem;
  margin-bottom: 1.5rem;
  box-shadow: 0 4px 12px rgba(59, 130, 246, 0.15);
}

.proposal-header {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  margin-bottom: 1rem;
  color: var(--primary-color);
}

.proposal-header i {
  font-size: 1.5rem;
}

.proposal-header h3 {
  margin: 0;
  font-size: 1.25rem;
  font-weight: 600;
}

.proposal-content {
  background: white;
  padding: 1.25rem;
  border-radius: var(--border-radius);
  margin-bottom: 1rem;
  line-height: 1.7;
  color: var(--text-color);
}

.proposal-content p {
  margin-bottom: 1rem;
}

.proposal-content p:last-child {
  margin-bottom: 0;
}

.proposal-actions {
  display: flex;
  gap: 1rem;
  flex-wrap: wrap;
}

.proposal-actions button {
  flex: 1;
  min-width: 150px;
}

#send-to-sdr-btn.btn-success {
  background: var(--success-color);
  border-color: var(--success-color);
}

#send-to-sdr-btn.btn-success:hover {
  background: #16a34a;
  border-color: #16a34a;
}

/* SDR and Lead Manager Card Styles */
.sdr-processed,
.lead-qualified {
  border-left: 4px solid var(--primary-color);
  background: linear-gradient(to right, rgba(59, 130, 246, 0.05), transparent);
}

.lead-qualified {
  border-left-color: var(--success-color);
  background: linear-gradient(to right, rgba(34, 197, 94, 0.05), transparent);
}

.sdr-actions,
.lead-actions {
  display: flex;
  gap: 0.5rem;
  margin-top: 0.75rem;
  padding-top: 0.75rem;
  border-top: 1px solid var(--gray-200);
  flex-wrap: wrap;
}

.btn-small {
  padding: 0.4rem 0.75rem;
  font-size: 0.75rem;
  border-radius: var(--border-radius);
  border: 1px solid var(--gray-300);
  background: white;
  cursor: pointer;
  display: inline-flex;
  align-items: center;
  gap: 0.35rem;
  transition: all 0.2s ease;
  flex: 1;
  justify-content: center;
}

.btn-small:hover {
  background: var(--gray-50);
}

.btn-small.btn-view {
  color: var(--primary-color);
  border-color: var(--primary-color);
}

.btn-small.btn-view:hover {
  background: rgba(59, 130, 246, 0.1);
}

.btn-small.btn-primary {
  background: var(--primary-color);
  color: white;
  border-color: var(--primary-color);
}

.btn-small.btn-primary:hover {
  background: var(--primary-dark);
}

.btn-small.btn-success {
  background: var(--success-color);
  color: white;
  border-color: var(--success-color);
}

.btn-small.btn-success:hover {
  background: #16a34a;
}

/* Priority indicators */
.priority-high {
  color: var(--danger-color);
}

.priority-medium {
  color: var(--warning-color);
}

.priority-low {
  color: var(--success-color);
}

/* Status badge for engaged/qualified */
.status-badge.status-engaged {
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  color: white;
}

.status-badge.status-qualified {
  background: linear-gradient(135deg, #22c55e, #16a34a);
  color: white;
}

/* Card that has been sent to SDR */
.business-card.sdr-sent {
  opacity: 0.7;
  border-left: 4px solid var(--primary-color);
}

/* ===== Calendar Column Styles ===== */

#calendar-column .column-header {
  background: linear-gradient(135deg, #4285f4 0%, #34a853 100%);
}

#calendar-column .column-count {
  background: rgba(255, 255, 255, 0.25);
  color: white;
}

.business-card.meeting-scheduled {
  border-left: 4px solid #4285f4;
  background: linear-gradient(135deg, #ffffff 0%, #f0f7ff 100%);
}

.business-card.meeting-scheduled:hover {
  box-shadow: 0 4px 20px rgba(66, 133, 244, 0.2);
}

.meeting-details {
  background: #f8f9fa;
  padding: 10px;
  border-radius: 8px;
  margin-top: 10px;
}

.meeting-details .detail {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-bottom: 5px;
}

.meeting-details .detail:last-child {
  margin-bottom: 0;
}

.calendar-actions {
  display: flex;
  gap: 8px;
  margin-top: 12px;
  padding-top: 12px;
  border-top: 1px solid #e0e0e0;
}

.calendar-actions button {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 5px;
  padding: 8px 12px;
  border: none;
  border-radius: 6px;
  cursor: pointer;
  font-size: 12px;
  font-weight: 500;
  transition: all 0.2s ease;
}

.calendar-actions button:hover {
  transform: translateY(-1px);
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
}

/* Schedule Meeting Button */
.btn-schedule-meeting {
  width: 100%;
  padding: 10px 15px;
  background: linear-gradient(135deg, #4285f4 0%, #34a853 100%);
  color: white;
  border: none;
  border-radius: 8px;
  cursor: pointer;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  font-size: 14px;
  box-shadow: 0 2px 8px rgba(66, 133, 244, 0.3);
  transition: all 0.3s ease;
}

.btn-schedule-meeting:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 15px rgba(66, 133, 244, 0.4);
}

/* Modal for scheduling */
#schedule-meeting-overlay .form-group label {
  display: block;
  margin-bottom: 8px;
  font-weight: 600;
  color: #2c3e50;
}

#schedule-meeting-overlay input,
#schedule-meeting-overlay select,
#schedule-meeting-overlay textarea {
  width: 100%;
  padding: 12px 15px;
  border: 2px solid #e0e0e0;
  border-radius: 8px;
  font-size: 14px;
  transition: border-color 0.3s;
}

#schedule-meeting-overlay input:focus,
#schedule-meeting-overlay select:focus,
#schedule-meeting-overlay textarea:focus {
  border-color: #4285f4;
  outline: none;
}

/* ===== End Calendar Column Styles ===== */

/* ===== Enhanced Human Input Dialog Styles ===== */

.auto-creation-info {
    text-align: center;
    padding: 2rem;
    background: linear-gradient(135deg, #e0f2fe 0%, #dbeafe 100%);
    border-radius: var(--border-radius);
    margin-bottom: 2rem;
    border: 2px solid #3b82f6;
}

.info-icon {
    width: 80px;
    height: 80px;
    margin: 0 auto 1rem;
    background: linear-gradient(135deg, #3b82f6, #2563eb);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 8px 25px rgba(59, 130, 246, 0.4);
    animation: pulse-glow 2s infinite ease-in-out;
}

@keyframes pulse-glow {
    0%, 100% {
        transform: scale(1);
        box-shadow: 0 8px 25px rgba(59, 130, 246, 0.4);
    }
    50% {
        transform: scale(1.05);
        box-shadow: 0 12px 35px rgba(59, 130, 246, 0.6);
    }
}

.info-icon i {
    font-size: 2.5rem;
    color: white;
}

.info-title {
    font-size: 1.35rem;
    font-weight: 700;
    color: #1e40af;
    margin-bottom: 0.75rem;
}

.info-description {
    font-size: 1rem;
    color: #1e3a8a;
    line-height: 1.6;
    max-width: 500px;
    margin: 0 auto;
}

.prompt-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 1rem;
    padding-bottom: 0.75rem;
    border-bottom: 2px solid var(--gray-200);
}

.prompt-label {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 600;
    color: var(--gray-700);
    font-size: 1.05rem;
}

.prompt-label i {
    color: var(--primary-color);
}

.copy-prompt-btn {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--gray-100);
    border: 1px solid var(--gray-300);
    border-radius: var(--border-radius);
    color: var(--gray-700);
    font-size: 0.9rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
}

.copy-prompt-btn:hover {
    background: var(--gray-200);
    border-color: var(--gray-400);
}

.copy-prompt-btn i {
    font-size: 0.9rem;
}

.redirect-section {
    margin-top: 2rem;
    padding: 1.5rem;
    background: var(--gray-50);
    border-radius: var(--border-radius);
    border: 1px solid var(--gray-200);
}

.redirect-info {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
    font-size: 0.95rem;
    color: var(--gray-600);
    line-height: 1.6;
}

.redirect-info i {
    color: var(--primary-color);
    font-size: 1.1rem;
    flex-shrink: 0;
}

.btn-redirect {
    width: 100%;
    padding: 1rem 1.5rem;
    background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
    color: white;
    border: none;
    border-radius: var(--border-radius);
    font-size: 1.05rem;
    font-weight: 600;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
}

.btn-redirect:hover {
    background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%);
    transform: translateY(-2px);
    box-shadow: 0 6px 25px rgba(102, 126, 234, 0.4);
}

.btn-redirect i {
    font-size: 1.1rem;
}

.url-input-container {
    display: flex;
    gap: 0.75rem;
    flex: 1;
}

.url-input {
    flex: 1;
    padding: 0.75rem 1rem;
    border: 2px solid var(--gray-300);
    border-radius: var(--border-radius);
    font-size: 0.95rem;
    transition: all 0.2s ease;
}

.url-input:focus {
    outline: none;
    border-color: var(--primary-color);
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
}

/* ===== End Enhanced Human Input Dialog Styles ===== */